{
  "name": "@tangible/roller",
  "version": "1.3.9",
  "description": "Build project assets using Rollup and ESBuild",
  "homepage": "https://github.com/tangibleinc/tangible-roller",
  "repository": "git@github.com:tangibleinc/tangible-roller.git",
  "license": "MIT",
  "main": "index.js",
  "bin": {
    "roll": "./run"
  },
  "tangible": {
    "deployName": "tangible-roller",
    "deployType": "tool"
  },
  "scripts": {
    "release": "npm publish --access public",
    "test": "cd test && if [ ! -d node_modules ]; then npm install; fi && ../run",
    "test:dev": "cd test && ../run dev",
    "test:build": "cd test && ../run build"
  },
  "dependencies": {
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-inject": "^4.0.4",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "autoprefixer": "^10.4.7",
    "chokidar": "^3.5.3",
    "esbuild": "^0.14.47",
    "eta": "^1.12.3",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "nodemon": "^2.0.16",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "rollup": "^2.75.7",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-esbuild": "^4.9.1",
    "rollup-plugin-external-globals": "^0.6.1",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "rollup-plugin-polyfill-node": "^0.9.0",
    "rollup-plugin-styles": "^4.0.0",
    "sass": "^1.53.0",
    "serve-handler": "^6.1.3",
    "ws": "^8.8.0"
  }
}
